<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <!-- Base theme applied regardless of API level -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="colorControlNormal">@color/primaryColor</item>
        <item name="colorControlActivated">@color/accentColor</item>
        <item name="colorControlHighlight">@color/accentColor</item>
        <item name="windowActionModeOverlay">false</item>
        <item name="android:fontFamily">@font/helveticaneuecyr</item>
        <item name="fontFamily">@font/helveticaneuecyr</item>
    </style>

    <!-- Default App theme applied if no resource style overrides for specific API level -->
    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <!-- App Splash Screen Theme -->
    <style name="AppTheme.Splash.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:fontFamily">@font/helveticaneuecyr</item>
        <item name="fontFamily">@font/helveticaneuecyr</item>
    </style>

    <!-- Default Splash Screen theme applied if no resource style overrides for specific API level -->
    <style name="AppTheme.Splash" parent="AppTheme.Splash.Base">
    </style>

    <style name="InfoTabLabel">
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="LabelBase">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="LargeLabel">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="InfoLabel" parent="LabelBase">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="TitleLabel" parent="InfoLabel">
        <item name="android:textSize">@dimen/font_subgigantic</item>
    </style>

    <style name="ButtonBase">
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="BigButton" parent="ButtonBase">
        <item name="android:layout_height">75dp</item>
        <item name="android:textSize">@dimen/font_gigantic</item>
        <item name="android:background">@drawable/big_button_background</item>
    </style>

    <style name="BorderedEditText">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:background">@drawable/bordered_edit_text</item>
    </style>

    <style name="BorderedEditTextWithLeftImage" parent="BorderedEditText">
        <item name="android:paddingLeft">13dp</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

</resources>
