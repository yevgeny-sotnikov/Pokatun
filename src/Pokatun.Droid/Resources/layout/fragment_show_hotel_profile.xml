<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TabWidget
                android:id="@android:id/tabs" 
                android:layout_marginLeft="@dimen/common_left_right_distanse"
                android:layout_marginRight="@dimen/common_left_right_distanse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <View
                android:layout_marginLeft="@dimen/common_left_right_distanse"
                android:layout_marginRight="@dimen/common_left_right_distanse"
                android:background="@color/lightSeparatorColor"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ScrollView
                    android:id="@+id/personalDataTab"
            		android:overScrollMode="never"
		            android:requiresFadingEdge="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="vertical"
                        android:animateLayoutChanges="true"
                    	android:paddingLeft="@dimen/common_left_right_distanse"
    	                android:paddingRight="@dimen/common_left_right_distanse"
                        android:showDividers="middle"
                        android:divider="?android:listDivider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
            				android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/name"
                                android:layout_gravity="top"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
	                        <TextView
		                        style="@style/InfoLabel"
                                android:layout_marginLeft="12dp"
		                        android:text="COMPANY NAME"
                                android:gravity="start"
		                        android:layout_width="match_parent"
		                        android:layout_height="wrap_content"
		                        android:id="@+id/fullCompanyNameLabel"
		                        />
                        </LinearLayout>
                        <MvvmCross.Platforms.Android.Binding.Views.MvxLinearLayout
                            android:id="@+id/phonesTable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:showDividers="middle"
                            android:divider="?android:listDivider"
                            />

                        <TextView
		                    style="@style/InfoLabel"
            				android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:drawableLeft="@drawable/mail"
                            android:drawablePadding="16dp"
		                    android:text="EMAIL"
                            android:gravity="start"
		                    android:singleLine="true"
		                    android:layout_width="match_parent"
		                    android:layout_height="wrap_content"
		                    android:id="@+id/emailLabel"
		                    />
                        <TextView
		                    style="@style/InfoLabel"
            				android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:drawableLeft="@drawable/i"
                            android:drawablePadding="16dp"
		                    android:text="BANK CARD"
                            android:gravity="start"
                            android:singleLine="true"
		                    android:layout_width="match_parent"
		                    android:layout_height="wrap_content"
		                    android:id="@+id/bankCardOrIbanLabel"
		                    />

                        <LinearLayout
                            android:orientation="horizontal"
            				android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/bank"
                                android:layout_gravity="top"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
	                        <TextView
		                        style="@style/InfoLabel"
                                android:layout_marginLeft="12dp"
		                        android:text="BANK NAME"
                                android:gravity="start"
		                        android:layout_width="match_parent"
		                        android:layout_height="wrap_content"
		                        android:id="@+id/bankNameLabel"
		                        />
                        </LinearLayout>
	                    <TextView
		                    style="@style/InfoLabel"
            				android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:drawableLeft="@drawable/i"
                            android:drawablePadding="16dp"
		                    android:text="USREOU"
                            android:singleLine="true"
                            android:gravity="start"
		                    android:layout_width="match_parent"
		                    android:layout_height="wrap_content"
		                    android:id="@+id/usreouLabel"
		                    />
                    </LinearLayout>
                </ScrollView>

                <ScrollView
                    android:id="@+id/hotelInfoTab"
            		android:overScrollMode="never"
		            android:requiresFadingEdge="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="vertical"
                        android:animateLayoutChanges="true"
                    	android:paddingLeft="@dimen/common_left_right_distanse"
    	                android:paddingRight="@dimen/common_left_right_distanse"
                        android:showDividers="middle"
                        android:divider="?android:listDivider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
            				android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/name"
                                android:layout_gravity="top"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
	                        <TextView
		                        style="@style/InfoLabel"
                                android:layout_marginLeft="12dp"
		                        android:text="NAME"
                                android:gravity="start"
		                        android:layout_width="match_parent"
		                        android:layout_height="wrap_content"
		                        android:id="@+id/hotelNameLabel"
		                        />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
            				android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/pin"
                                android:layout_gravity="top"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
	                        <TextView
		                        style="@style/InfoLabel"
                                android:layout_marginLeft="12dp"
		                        android:text="{location}"
                                android:gravity="start"
		                        android:layout_width="match_parent"
		                        android:layout_height="wrap_content"
		                        android:id="@+id/hotelLocationLabel"
		                        />
                        </LinearLayout>
                        <MvvmCross.Platforms.Android.Binding.Views.MvxLinearLayout
                            android:id="@+id/linksTable"
                            android:animateLayoutChanges="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:showDividers="middle"
                            android:divider="?android:listDivider"
                            />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:showDividers="middle"
                            android:divider="?android:attr/dividerVertical"
			                android:dividerPadding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="horizontal"
            				    android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="1">
                                <ImageView
                                    android:src="@drawable/clock"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />
	                            <TextView
		                            style="@style/InfoLabel"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="12dp"
		                            android:layout_width="wrap_content"
		                            android:layout_height="wrap_content"
		                            android:id="@+id/checkinLabel"
		                            />
	                            <TextView
		                            style="@style/AdditionalInfoLabel"
                                    android:layout_marginLeft="6dp"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="start"
		                            android:layout_width="match_parent"
		                            android:layout_height="wrap_content"
		                            android:id="@+id/checkinTimeLabel"
		                            />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
            				    android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dp">
                                <ImageView
                                    android:src="@drawable/clock"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />
	                            <TextView
		                            style="@style/InfoLabel"
                                    android:layout_marginLeft="12dp"
                                    android:layout_gravity="center_vertical"
		                            android:layout_width="wrap_content"
		                            android:layout_height="wrap_content"
		                            android:id="@+id/checkoutLabel"
		                            />
	                            <TextView
		                            style="@style/AdditionalInfoLabel"
                                    android:layout_marginLeft="6dp"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="start"
		                            android:layout_width="match_parent"
		                            android:layout_height="wrap_content"
		                            android:id="@+id/checkoutTimeLabel"
		                            />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
            				android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/i"
                                android:layout_gravity="top"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp">
	                            <TextView
		                            style="@style/AdditionalInfoLabel"
		                            android:text="title"
                                    android:gravity="start"
		                            android:layout_width="match_parent"
		                            android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
		                            android:id="@+id/infrastructureLabel"
		                            />
	                            <TextView
		                            style="@style/InfoLabel"
		                            android:text="DESCRIPTION"
                                    android:gravity="start"
		                            android:layout_width="match_parent"
		                            android:layout_height="wrap_content"
		                            android:id="@+id/infrastructureDecsriptionLabel"
		                            />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
            				android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/i"
                                android:layout_gravity="top"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp">
	                            <TextView
		                            style="@style/AdditionalInfoLabel"
		                            android:text="title"
                                    android:gravity="start"
		                            android:layout_width="match_parent"
		                            android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
		                            android:id="@+id/aboutUsLabel"
		                            />
	                            <TextView
		                            style="@style/InfoLabel"
		                            android:text="DESCRIPTION"
                                    android:gravity="start"
		                            android:layout_width="match_parent"
		                            android:layout_height="wrap_content"
		                            android:id="@+id/hotelDecsriptionLabel"
		                            />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>
